sContent":["<template>\n  <a-card\n    title=\"波动超过8%统计\"\n    :tab-list=\"tabs\"\n    @tabChange=\"(key) => changeTab(key)\"\n    style=\"text-align: left;\"\n  >\n    <div ref=\"container\" id=\"container\"></div>\n  </a-card>\n  <a-card title=\"波动超过8%明细\" style=\"text-align: left;\" class=\"detail-table\">\n    <a-date-picker\n      v-model:value=\"date\"\n      @change=\"onChange\"\n      size=\"large\"\n      style=\"margin-bottom: 10px;\"\n    />\n    <a-table\n      :columns=\"columns\"\n      :data-source=\"data\"\n      :pagination=\"false\"\n      size=\"middle\"\n    >\n      <template #symbol=\"{ text }\">\n        <a>{{ text }}</a>\n      </template>\n    </a-table>\n  </a-card>\n</template>\n<script>\nimport api from \"@/api/module\";\nconst columns = [\n  {\n    title: \"symbol\",\n    dataIndex: \"symbol\",\n    slots: { customRender: \"symbol\" },\n  },\n  {\n    title: \"WeekAvg\",\n    dataIndex: \"WeekAvg\",\n  },\n  {\n    title: \"lastPrice\",\n    dataIndex: \"lastPrice\",\n  },\n  {\n    title: \"ratio\",\n    dataIndex: \"ratio\",\n  },\n];\nconst now = new Date();\nexport default {\n  data() {\n    return {\n      data: [],\n      date: \"\" + now.getFullYear() + now.getMonth() + now.getDate(),\n      columns: columns,\n      chart: undefined,\n      tabs: [\n        {\n          key: \"7\",\n          tab: \"近一周\",\n        },\n        {\n          key: \"14\",\n          tab: \"近两周\",\n        },\n      ],\n    };\n  },\n  methods: {\n    changeTab(name) {\n      this.refresh(name);\n    },\n    refresh(choice) {\n      let that = this;\n      api.list(choice).then((res) => {\n        that.chart.source(res.data);\n        that.chart.render();\n      });\n    },\n    detail(date) {\n      api.detail(date).then((res) => {\n        this.data = res.data;\n      });\n    },\n    onChange(value, dateString) {\n      if (dateString) {\n        this.detail(dateString);\n      }\n    },\n  },\n  mounted() {\n    let containerRef = this.$refs[\"container\"];\n    let scrollWidth = containerRef.scrollWidth;\n    this.chart = new this.G2.Chart({\n      container: \"container\",\n      autoFit: true,\n      width: scrollWidth - 200,\n      height: 350,\n      padding: [30, 40, 20, 30],\n    });\n    this.chart\n      .interval()\n      .position(\"date*sum\")\n      .tooltip({\n        showMarkers: false,\n      });\n    this.refresh(7);\n    this.detail(\"2020-12-17\");\n  },\n};\n</script>\n<style>\n.ant-card-head-title {\n  font-size: 25px !important;\n}\n.detail-table .ant-card-body {\n  padding-left: 37px;\n}\n</style>\n"]}]}